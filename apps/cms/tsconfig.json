{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": false,
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "node_modules/@becomes/cms-backend/**/*.ts"]
}
